<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.perf.mapper.PerfPeriodMapper">
    
    <resultMap type="PerfPeriod" id="PerfPeriodResult">
        <result property="periodId"    column="period_id"    />
        <result property="periodName"    column="period_name"    />
        <result property="periodType"    column="period_type"    />
        <result property="submitDeadline"    column="submit_deadline"    />
        <result property="scoreDeadline"    column="score_deadline"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectPerfPeriodVo">
        select period_id, period_name, period_type, submit_deadline, score_deadline, status, remark, del_flag, create_by, create_time, update_by, update_time from perf_period
    </sql>

    <select id="selectPerfPeriodList" parameterType="PerfPeriod" resultMap="PerfPeriodResult">
        <include refid="selectPerfPeriodVo"/>
        <where>
            del_flag = '0'
            <if test="periodName != null  and periodName != ''"> and period_name like concat('%', #{periodName}, '%')</if>
            <if test="periodType != null  and periodType != ''"> and period_type = #{periodType}</if>
            <if test="submitDeadline != null "> and submit_deadline = #{submitDeadline}</if>
            <if test="scoreDeadline != null "> and score_deadline = #{scoreDeadline}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectPerfPeriodByPeriodId" parameterType="Long" resultMap="PerfPeriodResult">
        <include refid="selectPerfPeriodVo"/>
        where period_id = #{periodId}
    </select>

    <insert id="insertPerfPeriod" parameterType="PerfPeriod" useGeneratedKeys="true" keyProperty="periodId">
        insert into perf_period
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="periodName != null and periodName != ''">period_name,</if>
            <if test="periodType != null">period_type,</if>
            <if test="submitDeadline != null">submit_deadline,</if>
            <if test="scoreDeadline != null">score_deadline,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="remark != null">remark,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="periodName != null and periodName != ''">#{periodName},</if>
            <if test="periodType != null">#{periodType},</if>
            <if test="submitDeadline != null">#{submitDeadline},</if>
            <if test="scoreDeadline != null">#{scoreDeadline},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updatePerfPeriod" parameterType="PerfPeriod">
        update perf_period
        <trim prefix="SET" suffixOverrides=",">
            <if test="periodName != null and periodName != ''">period_name = #{periodName},</if>
            <if test="periodType != null">period_type = #{periodType},</if>
            <if test="submitDeadline != null">submit_deadline = #{submitDeadline},</if>
            <if test="scoreDeadline != null">score_deadline = #{scoreDeadline},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where period_id = #{periodId}
    </update>

    <delete id="deletePerfPeriodByPeriodId" parameterType="Long">
        update perf_period set del_flag = '2' where period_id = #{periodId}
    </delete>

    <delete id="deletePerfPeriodByPeriodIds" parameterType="String">
        update perf_period set del_flag = '2' where period_id in
        <foreach item="periodId" collection="array" open="(" separator="," close=")">
            #{periodId}
        </foreach>
    </delete>
</mapper>