<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysWorkflowConfigMapper">
    
    <resultMap type="SysWorkflowConfig" id="SysWorkflowConfigResult">
        <result property="configId"    column="config_id"    />
        <result property="configName"    column="config_name"    />
        <result property="templateId"    column="template_id"    />
        <result property="deptId"    column="dept_id"    />
        <result property="workflowSteps"    column="workflow_steps"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectSysWorkflowConfigVo">
        select config_id, config_name, template_id, dept_id, workflow_steps, status, remark, del_flag, create_by, create_time, update_by, update_time from sys_workflow_config
    </sql>

    <select id="selectSysWorkflowConfigList" parameterType="SysWorkflowConfig" resultMap="SysWorkflowConfigResult">
        <include refid="selectSysWorkflowConfigVo"/>
        <where>  
            <if test="configName != null  and configName != ''"> and config_name like concat('%', #{configName}, '%')</if>
            <if test="templateId != null "> and template_id = #{templateId}</if>
            <if test="deptId != null "> and dept_id = #{deptId}</if>
            <if test="workflowSteps != null  and workflowSteps != ''"> and workflow_steps = #{workflowSteps}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectSysWorkflowConfigByConfigId" parameterType="Long" resultMap="SysWorkflowConfigResult">
        <include refid="selectSysWorkflowConfigVo"/>
        where config_id = #{configId}
    </select>

    <insert id="insertSysWorkflowConfig" parameterType="SysWorkflowConfig" useGeneratedKeys="true" keyProperty="configId">
        insert into sys_workflow_config
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="configName != null and configName != ''">config_name,</if>
            <if test="templateId != null">template_id,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="workflowSteps != null and workflowSteps != ''">workflow_steps,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="remark != null">remark,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="configName != null and configName != ''">#{configName},</if>
            <if test="templateId != null">#{templateId},</if>
            <if test="deptId != null">#{deptId},</if>
            <if test="workflowSteps != null and workflowSteps != ''">#{workflowSteps},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateSysWorkflowConfig" parameterType="SysWorkflowConfig">
        update sys_workflow_config
        <trim prefix="SET" suffixOverrides=",">
            <if test="configName != null and configName != ''">config_name = #{configName},</if>
            <if test="templateId != null">template_id = #{templateId},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="workflowSteps != null and workflowSteps != ''">workflow_steps = #{workflowSteps},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where config_id = #{configId}
    </update>

    <delete id="deleteSysWorkflowConfigByConfigId" parameterType="Long">
        delete from sys_workflow_config where config_id = #{configId}
    </delete>

    <delete id="deleteSysWorkflowConfigByConfigIds" parameterType="String">
        delete from sys_workflow_config where config_id in 
        <foreach item="configId" collection="array" open="(" separator="," close=")">
            #{configId}
        </foreach>
    </delete>
</mapper>